@model TodoAppMvc.Models.Tarefa

@{ // Definindo o título da página
    ViewData["Title"] = "Excluir Tarefa";
}

<h2>@ViewData["Title"]</h2>

<h3>Você tem certeza que deseja excluir esta tarefa?</h3>
<div>
    <h4>Tarefa</h4>
    <hr />
    <dl class="row" style="padding-left: 15px;">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Concluida)
        </dt>
        <dd class = "col-sm-10">
            @(Model.Concluida ? "Sim" : "Não")
        </dd>
    </dl>
    
    <form asp-action="Excluir" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
    </form>
</div>

